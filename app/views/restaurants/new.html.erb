<h2>New Restaurant</h2>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES, prompt: 'Select category', label: false %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>
